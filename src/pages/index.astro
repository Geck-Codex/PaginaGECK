---
import Layout from '@/layouts/MainLayout.astro';
import VideoBackground from '@/components/VideoBackground.jsx';
import Header from '@/components/hero/Header.jsx';
import Introduction from '@/components/hero/Introduccion.jsx';
import Carrusel from '@/components/hero/Carrusel.jsx';
import IASection from '@/components/hero/IASection.jsx';
import WebSection from '@/components/hero/WebSection.jsx';
import MobileSection from '@/components/hero/MobileSection.jsx';
import IntroSpecialties  from '@/components/hero/IntroSpecialties.jsx';
import OutroSpecialties from '@/components/hero/OutroSpecialties.jsx';
---

<Layout>
  <!-- Video solo para estas dos secciones -->
  <VideoBackground client:load>
    <Header client:load />
    <Introduction client:load />
  </VideoBackground>
  
  <!-- Estas ya NO tienen video de fondo -->
  <IntroSpecialties client:load />
  <IASection client:load />
  <WebSection client:load />
  <MobileSection client:load />
  <OutroSpecialties client:load />
  <Carrusel client:load />
</Layout>